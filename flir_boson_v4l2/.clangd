# .clangd
CompileFlags:
  Add:
    - -nostdinc
    - -fno-builtin
    - -fno-strict-aliasing
    - -fno-asynchronous-unwind-tables
    - -fno-delete-null-pointer-checks
    - -fno-PIE
    - -D__KERNEL__
    - -DMODULE
    - -DKBUILD_BASENAME=\"module\"
    - -DKBUILD_MODNAME=\"module\"
    - -isystem
      /usr/lib/llvm/17/lib/clang/17/include
    - -I
      /lib/modules/$(uname -r)/build/include
    - -I
      /lib/modules/$(uname -r)/build/include/uapi
    - -I
      /lib/modules/$(uname -r)/build/include/generated
    - -I
      /lib/modules/$(uname -r)/build/include/generated/uapi
    - -I
      /lib/modules/$(uname -r)/build/arch/x86/include
    - -I
      /lib/modules/$(uname -r)/build/arch/x86/include/uapi
    - -I
      /lib/modules/$(uname -r)/build/arch/x86/include/generated
    - -I
      /lib/modules/$(uname -r)/build/arch/x86/include/generated/uapi
    - -Wno-unknown-warning-option
    - -Wno-unused-value
    - -Wno-unused-variable
    - -Wno-address-of-packed-member
    - -Wno-gnu-variable-sized-type-not-at-end
  Remove:
    - -stdlib=*
SystemHeaderPrefixes:
  - /lib/modules/
Diagnostics:
  ClangTidy: false
Index:
  Background: Skip
